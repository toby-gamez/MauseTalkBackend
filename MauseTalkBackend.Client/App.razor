@using Microsoft.AspNetCore.Components.Routing
@using MauseTalkBackend.Client.Services
@inject AuthService AuthService
@inject IJSRuntime JSRuntime

<div id="app">
    @if (isInitialized)
    {
        <Router AppAssembly="@typeof(App).Assembly">
            <Found Context="routeData">
                <RouteView RouteData="@routeData" DefaultLayout="@typeof(Layout.ChatLayout)" />
            </Found>
            <NotFound>
                <PageTitle>Not found</PageTitle>
                <LayoutView Layout="@typeof(Layout.ChatLayout)">
                    <p role="alert">Sorry, there's nothing at this address.</p>
                </LayoutView>
            </NotFound>
        </Router>
    }
    else
    {
        <div class="loading-screen">
            <div class="loading-content">
                <div class="logo">🐭</div>
                <div class="app-name">MauseChat</div>
                <div class="loading-spinner"></div>
                <div class="loading-text">Načítání...</div>
            </div>
        </div>
    }
</div>

<style>
    #app {
        height: 100vh;
        width: 100vw;
        overflow: hidden;
    }

    .loading-screen {
        height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }

    .loading-content {
        text-align: center;
        color: white;
    }

    .logo {
        font-size: 4rem;
        margin-bottom: 1rem;
    }

    .app-name {
        font-size: 2rem;
        font-weight: 600;
        margin-bottom: 2rem;
        background: linear-gradient(45deg, #fff, #e3f2fd);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .loading-spinner {
        width: 40px;
        height: 40px;
        border: 4px solid rgba(255,255,255,0.3);
        border-top: 4px solid white;
        border-radius: 50%;
        animation: spin 1s linear infinite;
        margin: 0 auto 1rem;
    }

    @@keyframes spin {
        0% { transform: rotate(0deg); }
        100% { transform: rotate(360deg); }
    }

    .loading-text {
        font-size: 1rem;
        opacity: 0.9;
    }

    /* Global Styles */
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
        line-height: 1.6;
        color: #333;
        overflow: hidden;
    }

    button {
        font-family: inherit;
    }

    input, textarea {
        font-family: inherit;
    }
</style>

@code {
    private bool isInitialized = false;
    private bool isAuthenticated = false;

    protected override async Task OnInitializedAsync()
    {
        // Subscribe to auth state changes
        AuthService.AuthStateChanged += OnAuthStateChanged;
        
        // Initialize auth service
        isAuthenticated = await AuthService.InitializeAsync();
        isInitialized = true;
        
        StateHasChanged();
    }

    private void OnAuthStateChanged(bool authenticated)
    {
        isAuthenticated = authenticated;
        InvokeAsync(StateHasChanged);
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            // Add JavaScript functions for chat functionality
            await JSRuntime.InvokeVoidAsync("eval", @"
                window.scrollToBottom = (element) => {
                    if (element) {
                        element.scrollTop = element.scrollHeight;
                    }
                };

                window.triggerFileInput = (fileInput) => {
                    if (fileInput) {
                        fileInput.click();
                    }
                };
            ");
        }
    }

    public void Dispose()
    {
        AuthService.AuthStateChanged -= OnAuthStateChanged;
    }
}

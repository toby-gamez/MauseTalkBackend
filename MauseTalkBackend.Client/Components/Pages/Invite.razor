@code {
    [Parameter] public string Code { get; set; } = string.Empty;
    
    private InviteLinkInfoDto? inviteInfo;
    private bool isLoading = true;
    private bool isJoining = false;
    
    // Auth form variables
    private bool isLoginMode = true;
    private bool isAuthenticating = false;
    private string authErrorMessage = string.Empty;
    private LoginRequest loginRequest = new();
    private RegisterRequest registerRequest = new();
    
    protected override async Task OnInitializedAsync()
    {
        await LoadInviteInfo();
    }
    
    private async Task LoadInviteInfo()
    {
        try
        {
            isLoading = true;
            inviteInfo = await InviteService.GetInviteLinkInfoAsync(Code);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading invite info: {ex.Message}");
            inviteInfo = null;
        }
        finally
        {
            isLoading = false;
        }
    }
    
    private async Task JoinChat()
    {
        if (inviteInfo == null) return;
        
        try
        {
            isJoining = true;
            var chat = await InviteService.JoinChatViaInviteAsync(Code);
            
            // Redirect to chat
            Navigation.NavigateTo("/");
            
            // Show success message
            await JSRuntime.InvokeVoidAsync("alert", $"√öspƒõ≈°nƒõ jste se p≈ôipojili k chatu '{chat.Name}'!");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error joining chat: {ex.Message}");
            await JSRuntime.InvokeVoidAsync("alert", $"Chyba p≈ôi p≈ôipojov√°n√≠: {ex.Message}");
        }
        finally
        {
            isJoining = false;
        }
    }
    
    private void GoToChat()
    {
        Navigation.NavigateTo("/");
    }
    
    private void RedirectToLogin()
    {
        Navigation.NavigateTo($"/login?returnUrl={Uri.EscapeDataString($"/invite/{Code}")}");
    }
    
    private void SetAuthMode(bool loginMode)
    {
        isLoginMode = loginMode;
        authErrorMessage = string.Empty;
    }
    
    private async Task HandleLogin()
    {
        if (string.IsNullOrEmpty(loginRequest.Username) || string.IsNullOrEmpty(loginRequest.Password))
        {
            authErrorMessage = "Pros√≠m vypl≈àte v≈°echna pole";
            return;
        }
        
        try
        {
            isAuthenticating = true;
            authErrorMessage = string.Empty;
            
            var result = await AuthService.LoginAsync(loginRequest);
            
            if (result.Success)
            {
                // Reload invite info to check membership status
                await LoadInviteInfo();
            }
            else
            {
                authErrorMessage = result.Message ?? "Chyba p≈ôi p≈ôihla≈°ov√°n√≠";
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Login error: {ex.Message}");
            authErrorMessage = "Chyba p≈ôi p≈ôihla≈°ov√°n√≠";
        }
        finally
        {
            isAuthenticating = false;
        }
    }
    
    private async Task HandleRegister()
    {
        if (string.IsNullOrEmpty(registerRequest.Username) || 
            string.IsNullOrEmpty(registerRequest.Email) || 
            string.IsNullOrEmpty(registerRequest.Password))
        {
            authErrorMessage = "Pros√≠m vypl≈àte v≈°echna povinn√° pole";
            return;
        }
        
        try
        {
            isAuthenticating = true;
            authErrorMessage = string.Empty;
            
            var result = await AuthService.RegisterAsync(registerRequest);
            
            if (result.Success)
            {
                // Reload invite info to check membership status
                await LoadInviteInfo();
            }
            else
            {
                authErrorMessage = result.Message ?? "Chyba p≈ôi registraci";
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Register error: {ex.Message}");
            authErrorMessage = "Chyba p≈ôi registraci";
        }
        finally
        {
            isAuthenticating = false;
        }
    }
}
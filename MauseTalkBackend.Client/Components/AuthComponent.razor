@code {
    private bool isLogin = true;
    private bool isLoading = false;
    private string? errorMessage = null;
    private string? successMessage = null;
    
    private LoginRequest loginModel = new();
    private RegisterRequest registerModel = new();

    private void SetMode(bool login)
    {
        isLogin = login;
        errorMessage = null;
        successMessage = null;
    }

    private async Task HandleLogin()
    {
        if (isLoading) return;
        
        isLoading = true;
        errorMessage = null;
        
        try
        {
            var result = await AuthService.LoginAsync(loginModel);
            
            if (result.Success)
            {
                successMessage = "√öspƒõ≈°nƒõ p≈ôihl√°≈°en! P≈ôesmƒõrov√°v√°me...";
                // Navigation will be handled by App.razor when auth state changes
            }
            else
            {
                errorMessage = result.Message ?? "Chyba p≈ôi p≈ôihla≈°ov√°n√≠";
                if (result.Errors?.Any() == true)
                {
                    errorMessage += ": " + string.Join(", ", result.Errors);
                }
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Neoƒçek√°van√° chyba: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task HandleRegister()
    {
        if (isLoading) return;
        
        isLoading = true;
        errorMessage = null;
        
        try
        {
            var result = await AuthService.RegisterAsync(registerModel);
            
            if (result.Success)
            {
                successMessage = "√öspƒõ≈°nƒõ zaregistrov√°n! P≈ôesmƒõrov√°v√°me...";
                // Navigation will be handled by App.razor when auth state changes
            }
            else
            {
                errorMessage = result.Message ?? "Chyba p≈ôi registraci";
                if (result.Errors?.Any() == true)
                {
                    errorMessage += ": " + string.Join(", ", result.Errors);
                }
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Neoƒçek√°van√° chyba: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }
}
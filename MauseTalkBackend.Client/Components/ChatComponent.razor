            Console.WriteLine($"Creating invite DTO: ChatId={createInviteDto.ChatId}, ExpiresAt={createInviteDto.ExpiresAt}");
            Console.WriteLine("About to call API...");
            
            var inviteLink = await InviteService.CreateInviteLinkAsync(createInviteDto);
            
            Console.WriteLine($"API call successful! InviteCode: {inviteLink.InviteCode}");
            Console.WriteLine($"API response: Id={inviteLink.Id}, ChatId={inviteLink.ChatId}");
            
            // Generate full URL
            var baseUrl = "http://localhost:5261";
            generatedInviteLink = $"{baseUrl}/invite/{inviteLink.InviteCode}";
            
            Console.WriteLine($"Generated invite link: {generatedInviteLink}");
            Console.WriteLine($"Link length: {generatedInviteLink.Length}");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"ERROR creating invite link: {ex.Message}");
            Console.WriteLine($"Exception details: {ex}");
            Console.WriteLine($"Exception type: {ex.GetType().Name}");
            
            // Set error message instead of empty string
            generatedInviteLink = $"ERROR: {ex.Message}";
        }
        finally
        {
            isGeneratingInvite = false;
            StateHasChanged();
        }
    }

